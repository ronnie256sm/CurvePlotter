<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="splines_avalonia.Views.SplineInputDialog"
        Width="400" Height="300"
        Title="Введите файлы для сплайна">
    <StackPanel Margin="20" Spacing="10">
        <TextBlock Text="Файл точек:"/>
        <TextBox Name="PointsFilePath"/>
        <TextBlock Text="Файл сетки (только для сглаживающего):"/>
        <TextBox Name="MeshFilePath"/>
        <Button Content="OK" Click="OnOkClick"/>
    </StackPanel>
</Window>
