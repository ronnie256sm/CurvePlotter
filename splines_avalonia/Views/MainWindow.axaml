<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:splines_avalonia.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="splines_avalonia.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="splines_avalonia">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" /> <!-- Статус-бар -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="400" />
        </Grid.ColumnDefinitions>

        <!-- Canvas -->
        <Canvas x:Name="GraphicHolder" Background="White" Grid.Row="0" Grid.Column="0" />

        <!-- Правая панель -->
        <Grid Grid.Row="0" Grid.Column="1" Background="#1E1E1E">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Border Margin="10" Background="White" CornerRadius="4" BorderBrush="DarkGray" BorderThickness="1">
                <ListBox ItemsSource="{Binding CurveList}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>

            <StackPanel Grid.Row="1" Orientation="Vertical" Margin="10" Spacing="10">
                <Button Content="Добавить" Height="40" FontSize="16" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="OnAddSpline"/>
                <Button Content="Редактировать" Height="40" FontSize="16" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
                <Button Content="Удалить" Height="40" FontSize="16" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
            </StackPanel>
        </Grid>

        <!-- Статус-бар -->
        <Border Grid.ColumnSpan="2" Grid.Row="1" Background="Black" Padding="5">
            <DockPanel LastChildFill="True">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" Spacing="5">
                    <Button Content="⌂" Width="30" Height="30" Click="OnResetPosition"/>
                    <RepeatButton Content="←" Width="30" Height="30" Click="OnMoveLeft"/>
                    <RepeatButton Content="↓" Width="30" Height="30" Click="OnMoveDown"/>
                    <RepeatButton Content="↑" Width="30" Height="30" Click="OnMoveUp"/>
                    <RepeatButton Content="→" Width="30" Height="30" Click="OnMoveRight"/>
                    <RepeatButton Content="+" Width="30" Height="30" Click="OnZoomIn"/>
                    <RepeatButton Content="−" Width="30" Height="30" Click="OnZoomOut"/>
                </StackPanel>
                <TextBlock x:Name="StatusBar"
                        FontSize="14"
                        Foreground="White"
                        VerticalAlignment="Center" />
            </DockPanel>
        </Border>
    </Grid>
</Window>