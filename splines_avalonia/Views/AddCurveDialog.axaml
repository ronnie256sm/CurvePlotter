<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="splines_avalonia.Views.AddCurveDialog"
        Width="300" Height="200"
        Title="Выбор типа кривой">
    <StackPanel Margin="20" Spacing="10">
        <TextBlock Text="Выберите тип кривой:" FontSize="16"/>
        <Button Content="Интерполяционный сплайн" Click="OnInterpolatingClick"/>
        <Button Content="Сглаживающий сплайн" Click="OnSmoothingClick"/>
    </StackPanel>
</Window>
