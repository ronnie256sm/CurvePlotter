<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="splines_avalonia.Views.ZoomInputDialog"
        Width="300" Height="150"
        Title="Изменить масштаб"
        WindowStartupLocation="CenterOwner"
        CanResize="false">
    <StackPanel Margin="20" Spacing="10">
        <TextBlock Text="Кратное изменение масштаба:" />
        <TextBox x:Name="ScaleInput" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
            <Button Content="ОК" Width="80" Click="OnOkClicked"/>
            <Button Content="Отмена" Width="80" Click="OnCancelClicked"/>
        </StackPanel>
    </StackPanel>
</Window>
